<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx/21.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ifpr.pgua.eic.greenlink.controllers.Autenticar">
   <center>
      <VBox alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="400.0" minWidth="600.0" prefHeight="600.0" prefWidth="800.0" spacing="10.0">
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
         <children>
            <Label text="Usuario" />
            <TextField fx:id="tfNome" maxWidth="200.0" />
            <Label text="Senha" />
            <PasswordField fx:id="pfSenha" maxWidth="200.0" />
            <HBox alignment="CENTER" maxWidth="200.0" spacing="10.0">
               <children>
                  <Button defaultButton="true" mnemonicParsing="false" onAction="#autenticar" prefHeight="24.0" prefWidth="90.0" text="Entrar" />
                  <Button mnemonicParsing="false" onAction="#mostrarCadastro" text="Cadastre-se" />
               </children>
               <padding>
                  <Insets top="15.0" />
               </padding>
            </HBox>
         </children>
      </VBox>
   </center>
</BorderPane>
